<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventPlannerMAUI.MVVM.View.MainFlyoutMenuPage"
             Title="MainFlyoutMenuPage">
    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <StackLayout>
                <Button Text="Home" Clicked="OnHomeClicked" />
                <Button Text="Tickets" Clicked="OnTicketsClicked" />
                <Button Text="Profile" Clicked="OnProfileClicked" />
                <Button Text="Manage Events" Clicked="OnManageEventsClicked" />
                <Button Text="Settings" Clicked="OnSettingsClicked" />
                <Button Text="Logout" Clicked="OnLogoutClicked" />
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage>
            <StackLayout>
                <Label Text="Welcome to .NET MAUI!" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>